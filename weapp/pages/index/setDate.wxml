  <view class="q-anite-pageIn q-page-full">
    <view class="user-set">
      <view class="title">我的人生我做主</view>
      <view class="weui-flex weui-flex__middle">
        <view class="item-hd">出生：</view>
        <view class="weui-flex__item">
          <picker mode="date" value="2016-07-16" start="1900-01-01" end="2017-12-31" bindchange="setBornDate">
            <view class="select" hover-class="select-hover">{{setLife.born === 0 ? '?年 ?月 ?日' : setLife.born}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-flex">
        <view class="item-hd">享年：</view>
        <view class="weui-flex__item">
          <picker mode="selector" value="{{ages.index}}" range="{{ages.value}}" bindchange="setDieDate">
            <view class="select" hover-class="select-hover">{{setLife.age === 0 ? '?' : setLife.age}} 岁</view>
          </picker>
        </view>
      </view>
      <view class="weui-btn-area">
        <button class="q-btn-mini" type="primary" bindtap="dateSubmit" loading="{{setLife.status === 0 ? '' : 'loading'}}" disabled="{{setLife.status === 0 ? '' : 'disabled'}}">{{setLife.status === 0 ? '确定' : ' 正在提交'}}</button>
        <view class="error">
          {{setLife.error}}
        </view>
      </view>
    </view>
  </view>
<view class="container">
  <view class="q-cells q-cells--avatar q-cells--avatar-l" style="padding:20rpx 0;">
    <view class="q-cell q-cell--link" hover-class="q-cell-hover" bindtap="onProfile">
      <view class="q-cell__hd">
        <image mode="aspectFill" catchtap="onViewAvatar" src="{{user.avatarUrl}}" data-avatar="{{user.avatarUrl}}" />
      </view>
      <view class="q-cell__bd">
        <view class="q-cell__text">{{user.nickName}}</view>
        <view class="q-cell__text--sub text">{{user.signature === '0' ? '这个人很懒，什么也不想做' : user.signature}}</view>
      </view>
      <view class="q-cell__ft"></view>
    </view>
  </view>

  <view class="q-cells">
    <navigator url="/pages/index/index" class="q-cell q-cell--hd q-cell--link" hover-class="q-cell-hover">
      <view class="q-cell__hd">
        <text class="icon icon-home blue" />
      </view>
      <view class="q-cell__bd">主页</view>
      <view class="q-cell__ft"></view>
    </navigator>
    <navigator url="/pages/index/index" class="q-cell q-cell--hd q-cell--link" hover-class="q-cell-hover">
      <view class="q-cell__hd">
        <text class="icon icon-feedback red" />
      </view>
      <view class="q-cell__bd">一生</view>
      <view class="q-cell__ft"></view>
    </navigator>
  </view>

  <view class="q-cell">
    <view class="q-cell__bd">表示</view>
  </view>
  <view class="page__bd">
    <view class="weui-grids">
        <block wx:for="{{grids}}" wx:key="*this">
            <navigator url="" class="weui-grid" hover-class="weui-grid_active">
                <image class="weui-grid__icon" src="../images/icon_tabbar.png" />
                <view class="weui-grid__label">Grid</view>
            </navigator>
        </block>
    </view>
</view>

  <view class="q-cells">
    <view class="q-cell q-cell--hd q-cell--link" hover-class="q-cell-hover">
      <view class="q-cell__hd">
        <text class="icon icon-goods orange" />
      </view>
      <view class="q-cell__bd">钱包</view>
      <view class="q-cell__ft"></view>
    </view>
    <view class="q-cell q-cell--hd q-cell--link" hover-class="q-cell-hover">
      <view class="q-cell__hd">
        <text class="icon icon-camera green" />
      </view>
      <view class="q-cell__bd">相册</view>
      <view class="q-cell__ft"></view>
    </view>
    <view class="q-cell q-cell--hd q-cell--link" hover-class="q-cell-hover">
      <view class="q-cell__hd">
        <text class="icon icon-label blue" />
      </view>
      <view class="q-cell__bd">卡包</view>
      <view class="q-cell__ft"></view>
    </view>
    <view class="q-cell q-cell--hd q-cell--link" hover-class="q-cell-hover">
      <view class="q-cell__hd">
        <text class="icon icon-eit purple" />
      </view>
      <view class="q-cell__bd">表情</view>
      <view class="q-cell__ft"></view>
    </view>
    <view class="q-cell q-cell--hd q-cell--link" hover-class="q-cell-hover" catch:tap="onClearCache">
      <view class="q-cell__hd">
        <text class="icon icon-trash red" />
      </view>
      <view class="q-cell__bd">清缓存</view>
      <view class="q-cell__ft"></view>
    </view>
  </view>

  <view class="q-cells">
    <view class="q-cell q-cell--hd q-cell--link" hover-class="q-cell-hover">
      <view class="q-cell__hd">
        <text class="icon icon-time pink" />
      </view>
      <view class="q-cell__bd">关于</view>
      <view class="q-cell__ft"></view>
    </view>
    <view class="q-cell q-cell--hd q-cell--link" hover-class="q-cell-hover">
      <view class="q-cell__hd">
        <text class="icon icon-setup blue" />
      </view>
      <view class="q-cell__bd">设置</view>
      <view class="q-cell__ft"></view>
    </view>
  </view>
</view>
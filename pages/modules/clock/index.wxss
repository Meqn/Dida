.clock .hour, .clock .minute, .clock .second, .clock .dot {
  position: absolute;
  top: 50%;
  left: 50%; }

.clock-box {
  position: relative;
  box-sizing: border-box;
  width: 360rpx;
  height: 360rpx;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden; }

.clock {
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -160px 0 0 -160px;
  width: 320px;
  height: 320px;
  font-size: 0;
  border-right: 1px solid #eee;
  border-top: 1px solid #eee;
  border-radius: 50%;
  background-color: #eee;
  background-image: -webkit-linear-gradient(215deg, #787878, #1e1e1e 40%);
  background-image: linear-gradient(235deg, #787878, #1e1e1e 40%);
  box-shadow: -5px 4px 8px rgba(0, 0, 0, 0.16);
  -webkit-transform: rotate(-90deg) scale(0.5);
      -ms-transform: rotate(-90deg) scale(0.5);
          transform: rotate(-90deg) scale(0.5); }
  .clock::before {
    content: "";
    position: absolute;
    top: 10px;
    left: 10px;
    right: 10px;
    bottom: 10px;
    background-color: #fff;
    border-radius: 50%;
    box-shadow: inset 0 0 8px 2px rgba(0, 0, 0, 0.38); }
  .clock .hour {
    margin: -4px 0 0 -12px;
    width: calc(25% + 10px);
    height: 8px;
    background-color: black;
    border-radius: 5px;
    -webkit-transform-origin: 12px 50%;
        -ms-transform-origin: 12px 50%;
            transform-origin: 12px 50%; }
  .clock .minute {
    width: calc(50% - 20px);
    height: 6px;
    margin: -3px 0 0 -18px;
    background-color: black;
    border-radius: 3px;
    -webkit-transform-origin: 18px 50%;
        -ms-transform-origin: 18px 50%;
            transform-origin: 18px 50%; }
  .clock .second {
    width: 50%;
    height: 2px;
    margin: -1px 0 0 -25px;
    background-color: #c80000;
    border-radius: 1px;
    -webkit-transform-origin: 25px 50%;
        -ms-transform-origin: 25px 50%;
            transform-origin: 25px 50%; }
  .clock .dot {
    -webkit-transform: translate3d(-50%, -50%, 0);
            transform: translate3d(-50%, -50%, 0);
    width: 6px;
    height: 6px;
    background-color: #fff;
    border-radius: 50%; }
  .clock .time-point {
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    -webkit-transform: scale(0.92);
        -ms-transform: scale(0.92);
            transform: scale(0.92); }
    .clock .time-point .d {
      position: absolute;
      width: 4px;
      height: 4px;
      background-color: #f6f6f6;
      border-radius: 50%; }
      .clock .time-point .d.h {
        width: 6px;
        height: 6px;
        background-color: #ccc; }





